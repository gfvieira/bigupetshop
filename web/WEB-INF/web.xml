<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>src.system,utilidades.AppExceptionHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOff</servlet-name>
        <servlet-class>src.login.LogOff</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error</location>
    </error-page>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>src.system.filtro.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>TimerFilter</filter-name>
        <filter-class>src.system.filtro.TimerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TimerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>CadastroUsuario</servlet-name>
        <servlet-class>src.admin.CadastroUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarUsuario</servlet-name>
        <servlet-class>src.admin.ListarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>src.login.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AltSenha</servlet-name>
        <servlet-class>src.login.AltSenha</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExibirUsuario</servlet-name>
        <servlet-class>src.admin.ExibirUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttUsuario</servlet-name>
        <servlet-class>src.admin.AttUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroUsuario</servlet-name>
        <url-pattern>/admin/CadastroUsuario.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarUsuario</servlet-name>
        <url-pattern>/admin/ListarUsuario.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltSenha</servlet-name>
        <url-pattern>/AltSenha.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExibirUsuario</servlet-name>
        <url-pattern>/admin/ExibirUsuario.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttUsuario</servlet-name>
        <url-pattern>/admin/AttUsuario.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOff</servlet-name>
        <url-pattern>/LogOff.jsp</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            20
        </session-timeout>
    </session-config>
</web-app>
